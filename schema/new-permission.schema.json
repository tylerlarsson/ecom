{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "new permission configuration schema",
  "type": "object",
  "required": ["name", "description"],
  "additionalProperties": false,
  "properties": {
    "id": {
      "$ref": "#mongo-id"
    },
    "name": {
      "oneOf": [
        {
          "$ref": "#name"
        },
        {
          "type": "string",
          "pattern": "^\\*$"
        }
      ]
    },
    "description": {
      "type": "string"
    }
  }
}
