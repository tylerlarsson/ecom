{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "new course section configuration schema",
  "type": "object",
  "required": ["params", "body"],
  "additionalProperties": false,
  "properties": {
    "params": {
      "type": "object",
      "required": ["course"],
      "properties": {
        "course": {
          "$ref": "#mongo-id"
        }
      }
    },
    "body": {
      "type": "object",
      "required": ["title"],
      "properties": {
        "section": {
          "$ref": "#mongo-id"
        },
        "title": {
          "type": "string"
        }
      },
      "anyOf": [
        {
          "properties": {
            "section": {
              "$ref": "#mongo-id"
            },
            "title": {
              "type": "string"
            }
          },
          "required": ["title"]
        },
        {
          "properties": {
            "sections": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["title"],
                "properties": {
                  "section": {
                    "$ref": "#mongo-id"
                  },
                  "title": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      ]
    }
  }
}
