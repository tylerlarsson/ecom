{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "web server configuration schema",
  "type": "object",
  "required": ["mongo", "web-app", "base-path", "default-user-permissions", "default-admin-permissions"],
  "additionalProperties": false,
  "properties": {
    "$schema": {
      "type": "string"
    },
    "mongo": {
      "additionalProperties": false,
      "type": "object",
      "required": ["host", "db", "password", "user"],
      "properties": {
        "host": {
          "type": "string",
          "format": "ipv4"
        },
        "db": {
          "type": "string"
        },
        "user": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      }
    },
    "web-app": {
      "additionalProperties": false,
      "type": "object",
      "properties": {
        "port": {
          "type": "integer",
          "minimum": 0,
          "maximum": 65535
        },
        "secret": {
          "type": "string",
          "minLength": 30,
          "maxLength": 30
        },
        "token-expires-in": {
          "type": "string",
          "minLength": 2
        },
        "refresh-token-expires-in": {
          "type": "string",
          "minLength": 2
        }
      },
      "required": ["port", "secret"]
    },
    "base-path": {
      "type": "string",
      "pattern": "^/[a-z-]+/v\\d+$"
    },
    "default-user-permissions": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[a-z-]+$"
      }
    },
    "default-admin-permissions": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^(\\*|[a-z-]+)$"
      }
    }
  }
}
