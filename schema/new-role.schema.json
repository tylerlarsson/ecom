{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "new role configuration schema",
  "type": "object",
  "required": ["name", "description"],
  "additionalProperties": false,
  "properties": {
    "id": {
      "$ref": "#mongo-id"
    },
    "name": {
      "$ref": "#name"
    },
    "description": {
      "type": "string"
    },
    "permissions": {
      "type": "array",
      "items": {
        "$ref": "#mongo-id"
      }
    }
  }
}
