{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "create enrollment configuration schema",
  "type": "object",
  "required": ["body", "params"],
  "additionalProperties": false,
  "properties": {
    "body": {
      "type": "object",
      "required": ["course"],
      "additionalProperties": false,
      "properties": {
        "course": {
          "$ref": "#mongo-id"
        }
      }
    },
    "params": {
      "type": "object",
      "required": ["user"],
      "additionalProperties": false,
      "properties": {
        "user": {
          "$ref": "#mongo-id"
        }
      }
    }
  }
}
